{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/api/categories/(.*)",
      "destination": "/api/categories"
    },
    {
      "source": "/api/articles/(.*)",
      "destination": "/api/articles"
    },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
